<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ovaflow.app.activity.SummaryActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_cool"
        android:id="@+id/summary_cool" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_good"
        android:id="@+id/summary_good"
        android:layout_below="@+id/summary_cool"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_bad"
        android:id="@+id/summary_bad"
        android:layout_below="@+id/summary_good"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_miss"
        android:id="@+id/summary_miss"
        android:layout_below="@+id/summary_bad"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/summary_score"
        android:id="@+id/summary_score"
        android:layout_below="@+id/summary_miss"
        android:layout_marginTop="60dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/summary_rank"
        android:id="@+id/summary_rank"
        android:layout_below="@+id/summary_score"
        android:layout_marginTop="40dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/summary_cool_pts"
        android:layout_above="@+id/summary_good"
        android:layout_alignLeft="@+id/summary_good_pts"
        android:layout_alignStart="@+id/summary_good_pts" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/summary_good_pts"
        android:layout_above="@+id/summary_bad"
        android:layout_alignLeft="@+id/summary_bad_pts"
        android:layout_alignStart="@+id/summary_bad_pts" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/summary_bad_pts"
        android:layout_above="@+id/summary_miss"
        android:layout_alignLeft="@+id/summary_miss_pts"
        android:layout_alignStart="@+id/summary_miss_pts" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/summary_miss_pts"
        android:layout_above="@+id/summary_score"
        android:layout_alignLeft="@+id/summary_score_pts"
        android:layout_alignStart="@+id/summary_score_pts" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/summary_score_pts"
        android:layout_alignBottom="@+id/summary_score"
        android:layout_alignLeft="@+id/summary_score"
        android:layout_marginLeft="240dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rank_score_pts"
        android:layout_alignBottom="@+id/summary_rank"
        android:layout_alignRight="@+id/summary_score_pts"
        android:layout_alignEnd="@+id/summary_score_pts" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summary_SABCDEF"
        android:src="@drawable/summary_s"
        android:layout_above="@+id/back"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/summary_score_pts"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/newHScore"
        android:layout_below="@+id/summary_SABCDEF"
        android:layout_alignRight="@+id/summary_score"
        android:layout_alignEnd="@+id/summary_score" />

</RelativeLayout>
